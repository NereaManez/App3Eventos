<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/testOnKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Escribe en la EditView1 y presiona ENTER"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/testOnFocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="onFocusChange"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/testOnKey"
        app:layout_constraintStart_toStartOf="@+id/testOnKey"
        app:layout_constraintTop_toBottomOf="@+id/testOnKey"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/testOnFocus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Edit text focus"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/testOnFocus"
        app:layout_constraintStart_toStartOf="@+id/testOnFocus"
        app:layout_constraintTop_toBottomOf="@+id/testOnFocus" />

    <Button
        android:id="@+id/testOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resetea"
        android:textSize="24sp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/testOnFocus2"
        app:layout_constraintStart_toStartOf="@+id/testOnFocus2"
        app:layout_constraintTop_toBottomOf="@+id/testOnFocus2" />

</androidx.constraintlayout.widget.ConstraintLayout>